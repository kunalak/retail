{% extends "/base.jinja2" %}

{% block head %}
{% endblock %}

{% block body %}
    <div id="search_div">
    <form action="">
      Receipt ID: <input type="text" name="receipt_id">
      <input type="submit" value="Search">
    </form>
</div>
<br>
    <div id="chart_div">
    {% if scans %}
        <table>
        <tr><td>Receipt_ID:</td><td>{{ scans[0].receipt_id }}</td></tr>
        <tr><td>Total:</td><td>${{ scans[0].receipt_total }}</td></tr>
        <tr><td>Card Type:</td><td>{{ scans[0].credit_card_type }}</td></tr>
        <tr><td>Customer Name:&nbsp;</td><td>{{ scans[0].customer.first_name}} {{ scans[0].customer.last_name}}</td></tr>
        <tr><td>Address:</td><td>{{ scans[0].customer.addr1}} </td></tr>
        <tr><td>&nbsp;</td><td>{{ scans[0].customer.city}}, {{ scans[0].customer.state}} {{ scans[0].customer.zip}}</td></tr>
        </table>
        <br>
        <table border="1" width="1000">
        <th>Quantity</th>
        <th>Item</th>
        <th>Price</th>
        <th>Amount</th>
        {% for scan in scans %}
            <tr>
            <td>{{ scan.quantity }}</td>
            <td><a href="/web/product?product_id={{ scan.product_id }}">{{ scan.product_name }}</a></td>
            <td>${{ scan.unit_price }}</td>
            <td>${{ scan.total }}</td>
            </tr>
        {% endfor %}
        </table>
    {% endif %}
</div>
{% endblock %}

{% block tail %}
{% endblock %}
